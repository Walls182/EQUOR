@model Consumer
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesión - EQUOR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>

        body {
            margin-bottom: 60px;
            background-image: url('../images/fond2.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            color: #333;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
            padding: 30px;
            margin-top: 50px;
        }

        .btn-azul {
            background-color: #22577A;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-sm-12">
                <div class="card">
                    <h2 class="text-center">Bienvenido a EQUOR</h2>
                    <hr>
                    <form asp-controller="Acceso" asp-action="Index" method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Correo Electrónico</label>
                            <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresa tu correo electrónico">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Contraseña</label>
                            <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1" placeholder="Ingresa tu contraseña">
                        </div>
                        <button type="submit" class="btn btn-azul btn-block">Iniciar Sesión</button>
                    </form>
                    <hr>
                    <p class="text-center">¿Eres nuevo en EQUOR? <a asp-controller="Consumers" asp-action="Create">Crea una cuenta aquí</a></p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


